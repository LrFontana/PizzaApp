<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolKt="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PizzaApp.Pages.CerrarPagina"
             Title="Salir">
    
    <VerticalStackLayout VerticalOptions="Center"
                         HorizontalOptions="Center"
                         Spacing="25">

        <Image x:Name="img"
               Source="check.png"
               HeightRequest="120"
               WidthRequest="120"
               Scale="0">

            <Image.Behaviors>

                <toolKt:IconTintColorBehavior TintColor="Green"/>

            </Image.Behaviors>
            
        </Image>

        <Label x:Name="mensaje"
               Text="Su pedido esta en camino."
               FontSize="35"
               TextColor="Green"
               Scale="0"/>

        <Button x:Name="Boton_Inicio"
                Text="Ir a la ppagina de inicio."
                BackgroundColor="DarkGoldenrod"
                CornerRadius="22"
                HorizontalOptions="Center"
                Padding="50, 15"
                Scale="0"
                Opacity="0"
                Clicked="Click_BotonDeInicio"/>      

    </VerticalStackLayout>
</ContentPage>